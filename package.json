{
  "name": "doz-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node development.js",
    "build": "parcel build public/index.html --no-cache",
    "snap": "doz-snap -f dist/index.html",
    "test": "mocha --require ignore-styles --require babel-register \"./{,!(node_modules)/**}/*.test.js\"",
    "server": "node server/app.js",
    "release:major": "npm version major",
    "release:minor": "npm version minor",
    "release:patch": "npm version patch",
    "preversion": "npm run-script build && git commit -a -m BUILD",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "doz": "^1.8.0",
    "doz-hot-location-reload": "^1.0.0",
    "doz-metatag": "^1.0.0",
    "doz-router": "^1.4.3",
    "doz-ssr": "^1.0.2",
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "doz-snap": "^1.0.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.12.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "opn": "^5.3.0",
    "parcel-bundler": "^1.9.4",
    "parcel-plugin-clean-dist": "0.0.6",
    "postcss-modules": "^1.3.2"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "client/*"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": "3000"
    }
  }
}
