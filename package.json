{
  "name": "doz-app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node development.js",
    "build": "parcel build public/index.html --no-cache",
    "snap": "doz-snap -f dist/index.html",
    "test": "mocha --require ignore-styles --require @babel/register \"./{,!(node_modules)/**}/*.test.js\"",
    "server": "node server/app.js",
    "release:major": "npm version major",
    "release:minor": "npm version minor",
    "release:patch": "npm version patch",
    "preversion": "npm run-script build && git commit -a -m BUILD",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "doz-ssr": "^1.1.0",
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.3"
  },
  "devDependencies": {
    "@abide-community/parcel-plugin-clean-out-dir": "^1.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "autoprefixer": "^9.1.0",
    "chai": "^4.1.2",
    "doz": "^1.11.0",
    "doz-hot-location-reload": "^1.0.1",
    "doz-metatag": "^1.0.0",
    "doz-router": "^1.4.3",
    "doz-snap": "^1.0.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.12.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "opn": "^5.3.0",
    "parcel-bundler": "^1.10.3",
    "postcss-modules": "^1.3.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*",
      "client/*"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": "3000"
    }
  }
}
